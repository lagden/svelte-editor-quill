{
  "name": "@tadashi/svelte-editor-quill",
  "version": "3.0.0",
  "description": "Svelte component",
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/svelte-editor-quill/issues"
  },
  "homepage": "https://github.com/lagden/svelte-editor-quill#readme",
  "scripts": {
    "rm": "rimraf dist",
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "run-s rm lint test:integration test:unit",
    "eslint": "eslint .",
    "lint": "prettier --check --plugin prettier-plugin-svelte . && eslint .",
    "format": "prettier --write --plugin prettier-plugin-svelte .",
    "test:integration": "playwright test",
    "test:unit": "vitest --run --coverage",
    "test:ui": "vitest --ui --coverage"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./dist/quill.js": {
      "types": "./dist/quill.d.ts",
      "svelte": "./dist/quill.js"
    },
    "./dist/Editor.svelte": {
      "types": "./dist/Editor.svelte.d.ts",
      "svelte": "./dist/Editor.svelte"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "peerDependencies": {
    "svelte": "^4.0.0",
    "quill": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.0.2",
    "@eslint/js": "9.2.0",
    "@playwright/test": "1.44.0",
    "@sveltejs/adapter-auto": "3.2.0",
    "@sveltejs/kit": "2.5.8",
    "@sveltejs/package": "2.3.1",
    "@sveltejs/vite-plugin-svelte": "3.1.0",
    "@types/eslint": "8.56.10",
    "@vitest/coverage-v8": "1.6.0",
    "eslint": "9.2.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.39.0",
    "eslint-plugin-unicorn": "53.0.0",
    "globals": "15.2.0",
    "jsdom": "24.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.3",
    "publint": "0.2.7",
    "rimraf": "5.0.7",
    "svelte": "4.2.17",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vitest": "1.6.0"
  }
}
